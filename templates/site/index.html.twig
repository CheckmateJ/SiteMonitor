{% extends 'base.html.twig' %}

{% block title %}Hello SiteController!{% endblock %}

{% block body %}


    <a href="{{ path('site_new') }}" class="btn btn-primary">Create new </a>

    <table class="table">
        <thead>
        <tr>
            <th>Domain Name</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for site in sites %}
            <tr>
                <td>{{ site.domainName }}</td>
                {% if site.status == 1 %}
                    <td>Enabled</td>
                {% else %}
                    <td>Disabled</td>
                {% endif %}
                <td><a onclick="return confirm('Are you sure to delete this row?')" data-m
                       href="{{ path('site_delete', {'id': site.id}) }}">Delete</a> || <a
                            href="{{ path('site_edit', {'id': site.id}) }}">Edit</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
